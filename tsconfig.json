{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2016",
    "lib": [
      "DOM",
      "ES6"
    ],
    "module": "commonjs",
    "types": [
      "cypress", 
      "node",
      "@testing-library/cypress"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts", 
    "cypress/support/cypress.d.ts", 
  ],
  "exclude": [
    "node_modules"
  ]
}
